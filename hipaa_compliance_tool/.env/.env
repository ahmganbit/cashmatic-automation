# Environment Configuration
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# Email Configuration (Brevo SMTP)
BREVO_USERNAME=your_brevo_username@example.com
BREVO_PASSWORD=your_brevo_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///hipaa_compliance.db
DATABASE_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# API Configuration
CLINICAL_TRIALS_API_KEY=your_api_key_if_required

# Application Configuration
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true
